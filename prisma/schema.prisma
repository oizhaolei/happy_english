// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vocabulary {
  id              Int     @id @default(autoincrement())
  category        String
  lang_source     String
  lang_target     String
  from_message    String
  to_message      String
  batch_no        Int

  @@index([category])
}

model VocabularyTestResult {
  id              Int     @id @default(autoincrement())
  from_message    String  @unique()
  score           Int
}

model FillSentence {
  id            Int     @id @default(autoincrement())
  category      String
  sentence      String
  answer        String

  @@index([category])
}
